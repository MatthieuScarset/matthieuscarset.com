<header class="page-header pt-4 bg-stone-100 border-b-4 border-b-green-900">
	<div class="container mx-auto">
		{{ page.header }}
	</div>
</header>

<main class="page-content flex-1 pt-4 pb-8 bg-white" role="main">
  <div class="visually-hidden">
    <a id="main-content" tabindex="-1"></a>
  </div>
	<div class="container mx-auto">
    {{ page.content }}
  </div>
</main>

<footer class="page-footer flex-0 justify-self-end pt-4 pb-4 border-t-200 border-t-4 border-t-green-900">
	<div class="container mx-auto">
    {{ page.footer }}
  </div>
</footer>
