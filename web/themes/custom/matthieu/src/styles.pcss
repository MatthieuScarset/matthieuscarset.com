@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html,
  body {
    @apply h-full
  }

  input {
    @apply border border-gray-500;
  }

  a[target="_blank"] {
    @apply cursor-nesw-resize;
  }

  p {
    @apply mb-4 leading-normal;
  }
}

@layer components {
  .block,
  .node {
    @apply mb-4;
  }

  .post.full .content a {
    @apply text-gray-700 border-b-2 hover:border-b-green-900;
  }

  /** Local tasks **/
  [id$="-local-tasks"] ul {
    @apply flex gap-2 py-2;
  }
  [id$="-local-tasks"] a {
    @apply inline-block p-1 font-medium text-gray-700 border-b-2;
  }
  [id$="-local-tasks"] a:hover,
  [id$="-local-tasks"] a.is-active {
    @apply border-b-blue-500;
  }

  /** Header **/
  .page-header [role="navigation"] ul {
    @apply flex flex-col md:flex-row gap-4 items-center;
  }
  .page-header [role="navigation"] a {
    @apply inline-block p-1 font-bold py-2 px-4;
  }
  .page-header [role="navigation"] a:hover,
  .page-header [role="navigation"] a.is-active {
    @apply bg-blue-500 hover:bg-blue-400 text-white rounded rounded-bl-none rounded-br-none;
  }

  /** Footer **/
  .page-footer [role="navigation"] ul {
    @apply flex gap-4 items-center;
  }
  .page-footer [role="navigation"] a {
    @apply inline-block p-1 font-medium text-gray-700 border-b-2 hover:border-b-green-900;
  }
  .page-footer [role="navigation"] a.is-active {
    @apply border-b-blue-500;
  }

  /** Portfolio **/
  .view-categories .view-content {
    @apply grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5;
  }
  .view-categories .views-row .post,
  .view-categories .views-row .relative {
    @apply min-h-max h-full;
  }

  .view-filters form {
    @apply flex gap-2
  }
  .view-filters .fieldset-wrapper {
    display: flex
  }
  .view-filters input[type="submit"] {
    @apply inline-block p-1 font-bold py-2 px-4
  }
  .view-filters input[type="submit"]:hover {
    @apply bg-blue-500 hover:bg-blue-400 text-white rounded rounded-bl-none rounded-br-none
  }

  .image {
    @apply rounded overflow-hidden
  }

}
